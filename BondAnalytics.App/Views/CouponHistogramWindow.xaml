<Window x:Class="App.Views.CouponHistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Гистограмма купонов" Height="800" Width="1300">

    <Grid>
        <oxy:PlotView x:Name="Plot"
                      Model="{Binding PlotModel}"
                      PreviewMouseDown="Plot_PreviewMouseDown"/>

        <Border x:Name="TooltipPanel"
                Background="#DDFFFFFF"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="4"
                Padding="6"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock x:Name="TooltipText"
                       Foreground="Black"
                       FontSize="14"/>
        </Border>
    </Grid>
</Window>
